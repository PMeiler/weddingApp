<% include partials/header %>

<div class="container" style="border: 1px solid grey;border-radius:5rem;margin-top:2rem;">
	<div class="jumbotron jumbotron-fluid">
	  <div class="container">
	  		<h1 class="display-4" id="header">Répondez S'il Vous Plaît </h1>
	    	<form style="width:60%; margin:2.5rem auto;" action="./form" method="POST">
	            <div class="form-group">
	                <input class="form-control" type="text" name="name" placeholder="First Name and Last Name" id="famName" required>
	            </div>
	            <div class="form-group" id="numbGroup">
	                <input class="form-control" type="text" name="numb" placeholder="Number of People Attending" id="numb" required>    
	            </div>
	           	<div class="form-group">
	                <input class="form-control" type="text" name="email" placeholder="Your E-Mail Address" required>    
	            </div>
	           	<div class="form-group">
	                <input class="form-control" type="text" name="tel" placeholder="Your Phone Number">    
	            </div>


            <div class="form-group" id="radiobtn">



            	<div class="form-check">
				  <input class="form-check-input" type="radio" name="coming" id="exampleRadios1" value="coming" checked>
				  <label class="form-check-label" for="exampleRadios1">
				    Accept With Pleasure
				  </label>
				</div>


            	<div class="form-check">
				  <input class="form-check-input" type="radio" name="coming" id="exampleRadios1" value="nocoming" >
				  <label class="form-check-label" for="exampleRadios1">
				    Decline With Regret
				  </label>
				</div>


            </div>


            <div class="form-group">
                <button style="width:100%;margin-bottom:10%;" id="RSVP"  class="btn btn-outline-dark btn-lg">Submit</button>
            </div>
        </form>
	  </div>
	</div>
</div>

